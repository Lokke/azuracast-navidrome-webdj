{
  "compilerOptions": {
    "module": "esnext",
    "target": "es2020",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": false,
    "outDir": "../dist-electron",
    "baseUrl": ".",
    "types": ["node"],
    "verbatimModuleSyntax": false
  },
  "include": [
    "*.ts",
    "**/*.ts"
  ],
  "exclude": [
    "../node_modules",
    "../dist",
    "../dist-electron"
  ]
}